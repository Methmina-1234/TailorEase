<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Declares that the app can use the device camera, but itâ€™s not mandatory -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <!-- Permissions required for network and location features -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Permissions for biometric and fingerprint authentication -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC"/>
    <uses-permission android:name="android.permission.USE_FINGERPRINT"/>

    <!-- Permissions for camera and external storage (storage permission limited to Android 9 / SDK 28) -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />




    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TailorEase"
        tools:targetApi="31">

        <!-- Google Maps API key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBKmrx10-AQnuN8zt74GbzxbHwt0UcGiz8" />

        <!-- Splash screen (launcher activity) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activities (English version) -->
        <activity android:name=".MainActivity"/>
        <activity android:name=".LoginScreen"/>
        <activity android:name=".LoginActivity"/>
        <activity android:name=".RegisterActivity"/>
        <activity android:name=".HomeActivity"/>
        <activity android:name=".CustomizeActivity" />
        <activity android:name=".ReadymadeActivity" />
        <activity android:name=".MaterialActivity" />
        <activity android:name=".ContactActivity" />
        <activity android:name=".MapsActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".OrderActivity" />
        <activity android:name=".CameraActivity" />

        <!-- FileProvider for sharing images (camera/photo feature) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Clothing category activities -->
        <activity android:name=".TrousersActivity" />
        <activity android:name=".TShirtActivity" />
        <activity android:name=".LadyDressActivity" />
        <activity android:name=".BlazerActivity" />
        <activity android:name=".KidDressActivity" />
        <activity android:name=".BagActivity" />

        <!-- Sinhala version activities -->
        <activity android:name=".LoginScreen_si"/>
        <activity android:name=".LoginActivity_si"/>
        <activity android:name=".RegisterActivity_si"/>
        <activity android:name=".HomeActivity_si"/>
        <activity android:name=".CustomizeActivity_si" />
        <activity android:name=".ReadymadeActivity_si" />
        <activity android:name=".MaterialActivity_si" />
        <activity android:name=".ContactActivity_si" />
        <activity android:name=".AboutActivity_si" />
        <activity android:name=".OrderActivity_si" />
        <activity android:name=".CameraActivity_si" />

        <!-- Clothing category activities in Sinhala -->
        <activity android:name=".TrousersActivity_si" />
        <activity android:name=".TShirtActivity_si" />
        <activity android:name=".LadyDressActivity_si" />
        <activity android:name=".BlazerActivity_si" />
        <activity android:name=".KidDressActivity_si" />
        <activity android:name=".BagActivity_si" />

    </application>

</manifest>