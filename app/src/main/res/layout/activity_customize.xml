<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="24dp"
    tools:context=".LoginScreen">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="355dp"
        android:layout_height="746dp"
        android:background="@drawable/rounded_bg2"
        android:clipToOutline="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494" />

    <Button
        android:id="@+id/btnOrder"
        android:layout_width="135dp"
        android:layout_height="59dp"
        android:backgroundTint="#F44336"
        android:fontFamily="@font/my_font"
        android:padding="15dp"
        android:text="Order Now"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.922"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintVertical_bias="0.834" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="168dp"
        android:layout_height="42dp"
        android:background="@drawable/rounded_bg"
        android:fontFamily="@font/my_font"
        android:padding="10dp"
        android:text="Select your Gender"
        android:textColor="#F6B056"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintVertical_bias="0.046" />

    <RadioGroup
        android:id="@+id/genderRadioGroup"
        android:layout_width="282dp"
        android:layout_height="42dp"
        android:background="@drawable/rounded_bg"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.438"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintVertical_bias="0.119">

        <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#F44336"
            android:text="Male"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#F44336"
            android:text="Female"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioKids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#F44336"
            android:text="Kids"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RadioGroup>

    <TextView
        android:layout_width="168dp"
        android:layout_height="42dp"
        android:background="@drawable/rounded_bg"
        android:fontFamily="@font/my_font"
        android:padding="10dp"
        android:text="Select size"
        android:textColor="#F6B056"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.171"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintVertical_bias="0.34" />

    <RadioGroup
        android:id="@+id/sizeRadioGroup"
        android:layout_width="292dp"
        android:layout_height="51dp"
        android:background="@drawable/rounded_bg"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintVertical_bias="0.417">

        <RadioButton
            android:id="@+id/radioSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#F44336"
            android:text="S"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#F44336"
            android:text="M"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#F44336"
            android:text="L"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioXL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#F44336"
            android:text="XL"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioXXL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#F44336"
            android:text="XXL"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="168dp"
        android:layout_height="42dp"
        android:background="@drawable/rounded_bg"
        android:fontFamily="@font/my_font"
        android:padding="10dp"
        android:text="Select Dress type"
        android:textColor="#F6B056"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintVertical_bias="0.191" />

    <Spinner
        android:id="@+id/clothingTypeSpinner"
        android:layout_width="285dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_bg"
        android:entries="@array/clothing_types"
        android:padding="8dp"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintVertical_bias="0.263" />

    <TextView
        android:layout_width="168dp"
        android:layout_height="42dp"
        android:background="@drawable/rounded_bg"
        android:fontFamily="@font/my_font"
        android:padding="10dp"
        android:text="Select Material"
        android:textColor="#F6B056"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <Spinner
        android:id="@+id/materialSpinner"
        android:layout_width="285dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_bg"
        android:entries="@array/material_types"
        android:padding="8dp"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintVertical_bias="0.573" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="168dp"
        android:layout_height="42dp"
        android:background="@drawable/rounded_bg"
        android:fontFamily="@font/my_font"
        android:padding="10dp"
        android:text="place order via call"
        android:textColor="#F6B056"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintVertical_bias="0.828" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:backgroundTint="#4CAF50"
        android:text="Calculate Price"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintVertical_bias="0.615" />

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:background="@drawable/rounded_bg3"
        android:gravity="center"
        android:padding="12dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintVertical_bias="0.641"
        app:layout_constraintWidth_percent="0.8" />

    <ImageButton
        android:id="@+id/btnOpenCamera"
        android:layout_width="76dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_bg1"
        android:contentDescription="Open Camera"
        android:padding="12dp"
        android:src="@android:drawable/ic_menu_camera"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintVertical_bias="0.972" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="168dp"
        android:layout_height="42dp"
        android:background="@drawable/rounded_bg"
        android:fontFamily="@font/my_font"
        android:padding="10dp"
        android:text="Share style with us"
        android:textColor="#F6B056"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.834"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintVertical_bias="0.94" />


</androidx.constraintlayout.widget.ConstraintLayout>
