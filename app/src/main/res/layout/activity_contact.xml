<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="24dp"
    tools:context=".LoginScreen">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_bg"
        android:clipToOutline="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:background="@drawable/rounded_border1"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/pic_1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toStartOf="@id/imageView6"
        app:layout_constraintTop_toTopOf="@id/imageView6"
        app:layout_constraintVertical_bias="0.03"
        app:layout_constraintWidth_percent="0.35" />


    <Button
        android:id="@+id/button_call"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#F44336"
        android:text="Call Us"
        android:textColor="@android:color/white"

        app:layout_constraintBottom_toBottomOf="@id/imageView6"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/imageView6"
        app:layout_constraintHorizontal_bias="0.591"

        app:layout_constraintStart_toStartOf="@id/imageView6"
        app:layout_constraintTop_toTopOf="@id/imageView6"

        app:layout_constraintVertical_bias="0.063"
        app:layout_constraintWidth_percent="0.25" />

    <!-- Description -->

    <Button
        android:id="@+id/button_map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#4CAF50"
        android:text="Map"
        android:textColor="@android:color/white"

        app:layout_constraintBottom_toBottomOf="@id/imageView6"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/imageView6"
        app:layout_constraintHorizontal_bias="0.955"

        app:layout_constraintStart_toStartOf="@id/imageView6"
        app:layout_constraintTop_toTopOf="@id/imageView6"

        app:layout_constraintVertical_bias="0.063"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:id="@+id/tv_contact_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:background="@drawable/rounded_bg1"
        android:gravity="center"
        android:text="Contact Us"
        android:textColor="#F6B056"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/tv_description1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_bg1"
        android:padding="15dp"
        android:text="TailorEase is open Monday to Saturday from 9:00 AM to 7:00 PM.\n\nFor appointments, urgent tailoring, or queries, feel free to call or visit our location via the map above.\n\nWe specialize in custom clothing for men, women, and kids â€“ with quality materials and perfect fittings.\n\nContact us today and experience expert tailoring with convenience."
        android:textColor="#F6B056"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/tv_contact_title"
        app:layout_constraintVertical_bias="0.029"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/tv_description2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autoLink="web|phone"
        android:background="@drawable/rounded_bg1"
        android:linksClickable="true"
        android:padding="15dp"
        android:text="Website: https://www.tailorease.com\nFacebook: https://www.facebook.com/tailorease\nInstagram: https://www.instagram.com/tailorease\nWhatsApp: +94 74 022 4207\nPhone: +94 31 223 0798"
        android:textColor="#F6B056"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/tv_description1"
        app:layout_constraintWidth_percent="0.9" />


</androidx.constraintlayout.widget.ConstraintLayout>
